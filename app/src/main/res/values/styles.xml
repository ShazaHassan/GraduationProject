<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/lightBlue</item>
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/darkBlue</item>
        <item name="tabSelectedTextColor">@color/lightBlue</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="SpinnerItem.normal" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="SpinnerItem.DropDownItem.normal" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="AppTheme.spinner.normal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem.normal</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem.normal</item>
        <item name="colorPrimaryDark">@color/lightBlue</item>
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.spinner">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="AppTheme.CustomThem">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
