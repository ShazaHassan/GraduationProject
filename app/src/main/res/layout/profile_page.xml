<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/personal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="20dp"
            android:src="@drawable/unknown_female_user"
            app:layout_constraintLeft_toLeftOf="parent"
            android:foregroundGravity="center"
            android:maxHeight="250dp"
            android:maxWidth="250dp"
            android:minHeight="150dp"
            android:minWidth="150dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/user_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/personal_img" />

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/user_name_header" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Shaza Hassan"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/user_name_header" />

        <TextView
            android:id="@+id/email_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_name" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="textEmailAddress"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/email_header" />

        <TextView
            android:id="@+id/email_personal_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Shazahassan2020@gmail.com"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/email_header" />

        <TextView
            android:id="@+id/birthday_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Birthday"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/email_personal_page" />

        <EditText
            android:id="@+id/edit_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="date"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/birthday_header" />

        <TextView
            android:id="@+id/birthday_personal_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="10/06/1995"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/birthday_header" />

        <TextView
            android:id="@+id/gender_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/birthday_personal_page" />

        <Spinner
            android:id="@+id/edit_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:entries="@array/gender"
            android:inputType="date"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/gender_header" />

        <TextView
            android:id="@+id/gender_personal_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Female"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/gender_header" />

        <TextView
            android:id="@+id/country_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/gender_personal_page" />

        <EditText
            android:id="@+id/edit_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="textShortMessage"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/country_header" />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Egypt"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/country_header" />

        <TextView
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:text="Change password"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/country" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_password" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>