<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/short_view_to_show_camp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/campaign_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campaign name"
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/type_of_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Type"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_of_campaign_in_reward_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/campaign_name"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:minHeight="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/description_for_reward_campaign_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_of_campaign_in_reward_home_page"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="1"
        android:text="Description About Camp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progress_bar_for_reward_campaign_home_page"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/days_left"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar_for_reward_campaign_home_page"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="20%"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_for_reward_campaign_home_page"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/days_left"
        android:layout_toRightOf="@+id/days_left"
        android:text="Need $"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/description_for_reward_campaign_home_page"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Days left"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/campaign_category_short_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar_for_reward_campaign_home_page"
        android:layout_marginTop="5dp"
        android:text="Category"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>