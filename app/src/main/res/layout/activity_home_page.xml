<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.Home_Page"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Template.Main_Template"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/home_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/quota_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/welcom_img"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#757575"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:id="@+id/second_item_in_home_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/title_for_campaign_reward_home_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToRewardCampaign"
                        android:text="Reward-Based Campaign"
                        android:textSize="24sp"
                        android:textColor="#311B92" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_below="@id/title_for_campaign_reward_home_page"
                        android:layout_width="wrap_content"
                        android:layout_height="420dp" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:pointerIcon="arrow"
                        android:layout_below="@id/pager"
                        android:layout_centerHorizontal="true"
                        app:centered="true"
                        app:fillColor="#1ebad6"
                        app:pageColor="#c752"
                        app:snap="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/indicator"
                        android:layout_alignParentRight="true"
                        android:text="More"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"
                        android:onClick="goToRewardCampaign" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#757575"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:id="@+id/third_item_in_home_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/title_for_campaign_equity_home_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToEquityCampaign"
                        android:text="Equity-Based Campaign"
                        android:textSize="24sp"
                        android:textColor="#0D47A1" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager_Equity_Camp"
                        android:layout_below="@id/title_for_campaign_equity_home_page"
                        android:layout_width="wrap_content"
                        android:layout_height="420dp" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator_Equity_Camp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:pointerIcon="arrow"
                        android:layout_below="@id/pager_Equity_Camp"
                        android:layout_centerHorizontal="true"
                        app:centered="true"
                        app:fillColor="#1ebad6"
                        app:pageColor="#c752"
                        app:snap="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/indicator_Equity_Camp"
                        android:layout_alignParentRight="true"
                        android:text="More"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"
                        android:onClick="goToEquityCampaign" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        app:menu="@menu/item_in_drawer"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</android.support.v4.widget.DrawerLayout>